@page
@model Proyecto.Pages.RegistroEnfermeroModel
@{
    ViewData["Title"] = "Registro de Enfermero";
}

<style>
    body {
        background: url(/img/fondos.jpg);
        overflow-x: hidden;
        width: 100%;
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        height: 100vh;
    }

    .fondo-transparente {
        background-color: rgba(255, 255, 255, 0.3);
        border-radius: 1rem;
        padding: 1rem;
        backdrop-filter: blur(10px);
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="fondo-transparente p-5 text-center">
                <h1 class="display-4 fw-bold text-primary mb-4">Registrar Enfermero</h1>

                @if (!string.IsNullOrEmpty(Model.Mensaje))
                {
                    <div class="alert alert-danger">@Model.Mensaje</div>
                }

                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Registro.TipoDocumento" class="form-label"></label>
                        <select asp-for="Registro.TipoDocumento" class="form-select" required>
                            <option value="">Seleccione...</option>
                            <option value="CC">Cédula de Ciudadanía</option>
                            <option value="CE">Cédula de Extranjería</option>
                        </select>
                        <span asp-validation-for="Registro.TipoDocumento" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Registro.Documento" class="form-label"></label>
                        <input asp-for="Registro.Documento" class="form-control" type="text" required />
                        <span asp-validation-for="Registro.Documento" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Registro.Nombres" class="form-label"></label>
                        <input asp-for="Registro.Nombres" class="form-control" required />
                        <span asp-validation-for="Registro.Nombres" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Registro.Apellidos" class="form-label"></label>
                        <input asp-for="Registro.Apellidos" class="form-control" required />
                        <span asp-validation-for="Registro.Apellidos" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Registro.Correo" class="form-label"></label>
                        <input asp-for="Registro.Correo" class="form-control" required />
                        <span asp-validation-for="Registro.Correo" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Registro.Telefono" class="form-label"></label>
                        <input asp-for="Registro.Telefono" class="form-control" type="text" required />
                        <span asp-validation-for="Registro.Telefono" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Registro.Contraseña" class="form-label"></label>
                        <input asp-for="Registro.Contraseña" type="password" class="form-control" required />
                        <span asp-validation-for="Registro.Contraseña" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Registro.ConfirmarContraseña" class="form-label"></label>
                        <input asp-for="Registro.ConfirmarContraseña" type="password" class="form-control" required />
                        <span asp-validation-for="Registro.ConfirmarContraseña" class="text-danger small"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">Registrar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<br>
<br>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}