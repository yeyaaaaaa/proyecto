@page
@model Proyecto.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="fondo-transparente p-4 text-center">
                <h1 class="display-4 fw-bold text-primary mb-4">Ingresar</h1>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger">@Model.ErrorMessage</div>
                }

                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Login.Documento" class="form-label"></label>
                        <input asp-for="Login.Documento" type="number" class="form-control" required />
                        <span asp-validation-for="Login.Documento" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Login.Password" class="form-label"></label>
                        <input asp-for="Login.Password" type="password" class="form-control" required />
                        <span asp-validation-for="Login.Password" class="text-danger small"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">Entrar</button>
                    <div class="text-center">
                        <a class="link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover"
                            asp-page="/Registro" role="button">Registrarse</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}