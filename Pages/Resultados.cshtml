@page
@model Proyecto.Pages.ResultadosModel
@{
    ViewData["Title"] = "Resultados de Exámenes";
}

<style>
    body {
        background: url(/img/fondos.jpg);
        overflow-x: hidden;
        width: 100%;
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        height: 100vh;
    }
    .fondo-transparente{
        background-color: rgba(255, 255, 255, 0.3);
        border-radius: 1rem;
        padding: 1rem;
        backdrop-filter: blur(10px);
    }
</style>

<div class="container mt-5">
    <div class="fondo-transparente p-4">
        <h2 class="fw-bold text-primary mb-4">Resultados de Exámenes</h2>

        @if (Model.Resultados.Count == 0)
        {
            <div class="alert alert-info">Aún no tienes resultados disponibles.</div>
        }
        else
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Examen</th>
                        <th>Fecha de cita</th>
                        <th>Descargar resultado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Resultados)
                    {
                        <tr>
                            <td>@item.ExamenNombre</td>
                            <td>@item.FechaHora.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.RutaArchivo))
                                {
                                    <a class="btn btn-success btn-sm" href="@item.RutaArchivo" target="_blank">
                                        Descargar PDF
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">No disponible</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>