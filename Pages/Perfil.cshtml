@page
@model Proyecto.Pages.PerfilModel
@{
    ViewData["Title"] = "Mi Perfil";
}

<style>
    body {
        background: url(/img/Fondos.jpg);
        overflow-x: hidden;
        width: 100%;
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        height: 100vh;
    }
    .fondo-transparente{
        background-color: rgba(255, 255, 255, 0.6);
        backdrop-filter: blur(10px);
    }
</style>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-0 fondo-transparente">
                <div class="card-header display-2 fw-normal text-center">
                    <h3 class="mb-0"><i class="bi bi-person-circle me-2"></i>Mi Perfil</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Mensaje))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @Model.Mensaje
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <form method="post" autocomplete="off">
                        <input type="hidden" asp-for="Perfil.PacienteID" />
                        <div class="mb-3">
                            <label class="form-label">Tipo Documento</label>
                            <input class="form-control-plaintext border-bottom" value="@Model.Perfil.TipoDocumento" readonly />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Documento</label>
                            <input class="form-control-plaintext border-bottom" value="@Model.Perfil.Documento" readonly />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">EPS Afiliado</label>
                            <input class="form-control-plaintext border-bottom" value="@Model.Perfil.NombreEPS" readonly />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Nombres</label>
                            <input asp-for="Perfil.Nombres" class="form-control" />
                            <span asp-validation-for="Perfil.Nombres" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Apellidos</label>
                            <input asp-for="Perfil.Apellidos" class="form-control" />
                            <span asp-validation-for="Perfil.Apellidos" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Correo</label>
                            <input asp-for="Perfil.Correo" type="email" class="form-control" />
                            <span asp-validation-for="Perfil.Correo" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Sexo</label>
                            <select asp-for="Perfil.Sexo" class="form-select">
                                <option value="">Seleccione...</option>
                                <option value="Masculino">Masculino</option>
                                <option value="Femenino">Femenino</option>
                                <option value="Otro">Otro</option>
                            </select>
                            <span asp-validation-for="Perfil.Sexo" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Teléfono</label>
                            <input asp-for="Perfil.Telefono" class="form-control" />
                            <span asp-validation-for="Perfil.Telefono" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Dirección</label>
                            <input asp-for="Perfil.Direccion" class="form-control" />
                            <span asp-validation-for="Perfil.Direccion" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Fecha de Nacimiento</label>
                            <input asp-for="Perfil.Nacimiento" type="date" class="form-control-plaintext border-bottom" readonly />
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg mb-3">
                                <i class="bi bi-save me-1"></i> Guardar Cambios
                            </button>
                            <div class="text-center">
                            <a class="link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover " asp-page="/IndexPaciente" role="button">Regresar</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}